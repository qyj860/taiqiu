/* 全局样式 */
page {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 默认颜色 */
body {
  background-color: white;
  color: black;
}

/* 页面标题 */
.page-title {
  padding: 15px;
  font-size: 18px;
  font-weight: bold;
  background: white;
  border-bottom: 1px solid #eee;
}

/* 通用页面容器 */
.page-container {
  background: white;
  min-height: 100vh;
  padding-bottom: 60px; /* 为标签栏留出空间 */
}

/* 标签栏 */
.tab-bar {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  background: white;
  border-top: 1px solid #e0e0e0;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 5px 0;
}

.tab-item image {
  width: 24px;
  height: 24px;
  margin-bottom: 4px;
}

.tab-item text {
  font-size: 12px;
  color: #999;
}

.tab-item.active text {
  color: #007aff;
}