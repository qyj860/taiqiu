/* 用户信息 */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px 0;
  background-color: white;
  margin-bottom: 15px;
}

.user-avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 15px;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 15px;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  width: 100%;
  max-width: 300px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 18px;
  font-weight: bold;
}

.stat-label {
  font-size: 12px;
  color: #999;
}

/* 登录按钮 */
.login-btn {
  width: 80%;
  padding: 10px;
  background-color: #00c853;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  margin: 50px auto 15px;
  text-align: center;
}

/* 个人设置 */
.settings {
  background-color: white;
  margin-bottom: 15px;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  border-bottom: 1px solid #eee;
}

.icon-right {
  display: inline-block;
  width: 16px;
  height: 16px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  transform: rotate(45deg);
}