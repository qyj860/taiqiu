/* 登录容器 */
.login-container {
  height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 120rpx;
}

.login-card {
  width: 85%;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
}

.logo {
  width: 160rpx;
  height: 160rpx;
  display: block;
  margin: 0 auto 60rpx;
}

.input-group {
  position: relative;
  margin-bottom: 40rpx;
}

.input-icon {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
}

.input {
  width: 75%;
  height: 100rpx;
  padding: 0 80rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333;
  border: 2rpx solid #e4e7ed;
  transition: all 0.3s;
}

.input:focus {
  border-color: #1aad19;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 12rpx;
  font-size: 34rpx;
  font-weight: 500;
  margin-top: 60rpx;
  transition: all 0.3s;
}

.login-btn.primary {
  background: #1aad19;
  color: #fff;
}

.login-btn.primary[disabled] {
  background: #a0d8a0;
}

.third-login {
  margin-top: 80rpx;
}

.divider {
  display: block;
  text-align: center;
  color: #909399;
  font-size: 26rpx;
  position: relative;
  margin: 40rpx 0;
}

.divider::before,
.divider::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 30%;
  height: 1rpx;
  background: #dcdfe6;
}

.divider::before { left: 0 }
.divider::after { right: 0 }

.wechat-login {
  background: transparent;
  border: none;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #09bb07;
  font-size: 30rpx;
}

.wechat-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}