/* 发帖区域 */
.post-area {
  padding: 15px;
  background-color: white;
  margin-bottom: 15px;
}

.post-area textarea {
  width: 100%;
  height: 100px;
  padding: 10px;
  border: 1px solid #eee;
  border-radius: 5px;
  margin-bottom: 10px;
}

.upload-btn, .submit-btn {
  background-color: #00c853;
  color: white;
  border: none;
  border-radius: 5px;
  padding: 10px 15px;
  margin-right: 10px;
}

/* 帖子列表 */
.post-list {
  padding: 0 15px 15px;
}

.post-item {
  background-color: white;
  border-radius: 10px;
  padding: 15px;
  margin-bottom: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.post-header image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.post-user-info {
  flex: 1;
}

.post-username {
  font-weight: bold;
}

.post-time {
  color: #999;
  font-size: 12px;
}

.post-content {
  margin-bottom: 10px;
  line-height: 1.5;
}

.post-images {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10px;
}

.post-images image {
  width: 33.33%;
  height: 100px;
  object-fit: cover;
}

.post-actions {
  display: flex;
  justify-content: space-around;
}

.post-actions button {
  background: none;
  border: none;
  color: #666;
  padding: 0;
}