.tab-bar {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  background: white;
  border-top: 1px solid #e0e0e0;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 5px 0;
}

.tab-item image {
  width: 24px;
  height: 24px;
  margin-bottom: 4px;
}

.tab-item text {
  font-size: 12px;
  color: #999;
}

.tab-item.active text {
  color: #007aff;
}